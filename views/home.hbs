<div class="container pt-5 pb-5">

  <div class="row">
    <div class="col-6">
      <h1>Users</h1>
    </div>
    <div class="col-6 d-flex justify-content-end">
      <a href="/addUser"><button class="btn btn-primary">+ Add New User</button> </a>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered ">
      <thead class="thread-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          {{!-- <th scope="col">Password</th> --}}
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each rows}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          {{!-- <td>{{this.password}}</td> --}}
          <td class="text-end">
            <a href="/userProfile/{{this.id}}" class="btn  btn-light btn-small"><i class="bi bi-eye"></i> View</a>
            <a href="/edit-user/{{this.id}}" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
            <a href="/deleteUser/{{this.id}}" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

  </div>
</div>